
<div class="mt-3 d-flex pl-5 py-3">
  <h2>Edit your hug : </h2>
</div>

<div class="container mt-3 mb-6">
  <%= simple_form_for [:hugger, @hug] do |f| %>
    <%= f.input :title%>
    <%= f.input :description %>
    <%= f.input :price, as: :currency %>
    <%= f.input :category, collection: Hug.categories %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
