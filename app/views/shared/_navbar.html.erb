<%# NAVBAR TOP MENU START %>
<%# RAJOUTER JQUERY bg-light & Remove bg-transparant %>
<%# ! Dans le Link To, rajouter un logo %>
<%# ! Remettre fixed-top navbar-fixed-top pour une nav bar fixed%>
<nav id="navMenu" class="navbar sticky-top navbar-light bg-white justify-content-between">
  <%= link_to root_path, class: "navbar-brand" do %>
    HUG'N'MORE
  <% end %>
  <div class="d-flex" id="">
    <%# LOGIN USER %>
    <button id="userMenuBtn" class="btn" >
      <i class="fa fa-user" aria-hidden="true"></i>
    </button>
    <%# MENU DOTS %>
    <a id="dotsMenu" class="btn menu" data-target="#modalNavigation" data-toggle="modal" type="button">
      <div class="pix"></div>
      <div class="pix"></div>
      <div class="pix"></div>
      <div class="pix"></div>
      <div class="pix"></div>
      <div class="pix"></div>
      <div class="pix"></div>
      <div class="pix"></div>
      <div class="pix"></div>
    </a>
  </div>
</nav>
<%# NAVBAR TOP MENU END %>
<%# MODAL MENU START %>
<div class="modal fade" id="modalNavigation" role="dialog"  aria-hidden="true">
  <%# BUTTON CLOSE %>
  <a id="dotsMenuClose" class="btn menu active" data-target="#modalNavigation" data-toggle="modal" type="button" aria-label="Close" class="close" data-dismiss="modal">
    <div class="pix"></div>
    <div class="pix"></div>
    <div class="pix"></div>
    <div class="pix"></div>
    <div class="pix"></div>
    <div class="pix"></div>
    <div class="pix"></div>
    <div class="pix"></div>
    <div class="pix"></div>
  </a>
  <%# MODAL %>
  <div class="modal-dialog">
    <div class="modal-content" role="document">
      <ul id="menuModal" class="list-group text-left">
        <%# LIST %>
        <%# link_to 'text', path %>
        <a href="#">
          <li class="list-group-item menu-item"><span>Home</span></li>
        </a>
        <a href="#">
          <li class="list-group-item menu-item"><span>Huggers</span></li>
        </a>
        <a href="#">
          <li class="list-group-item menu-item"><span>Hugs Next To You</span></li>
        </a>
        <a href="#">
          <li class="list-group-item menu-item"><span>Test</span></li>
        </a>
        <a href="#">
          <li class="list-group-item menu-item"><span>Contact</span></li>
        </a>
        <%# MENU PROFIL / LOG OUT START %>
        <hr>
        <li class="footer-menu list-inline ">
          <div class="d-flex justify-content-center">
            <!-- <a class="list-group-item" href="#"><i class="far fa-user fa-lg"></i></a> -->
            <!-- <a class="list-group-item" href="#"><i class="fas fa-sign-out-alt fa-lg"></i></a> -->
            <% if user_signed_in? %>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <p class="list-group-item"><i class="fas fa-sign-out-alt fa-lg"></i></p>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path do %>
                <p class="list-group-item"><i class="far fa-user fa-lg"></i></p>
              <% end %>
            <% end %>
          </div>
        </li>
        <%# MENU PROFIL / LOG OUT END %>
      </ul>
    </div>
  </div>
</div>
<%# MODAL MENU END %>
