<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  Hug
</div>


<!-- Card huggers#index -->

<div class="friendly">
  <div class="row">
    <% @hugs.where(category: 0).each do |hug| %>
      <div class="col-3">
        <div class="card-trip m-4">
          <img src=<%= cl_image_path hug.photo %> />
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to hug.title, hug_path(hug), :style=>'color: black;', class: 'stretched-link' %></h2>
              <p>Short description here!</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<!-- Card home page -->

<div id="friendly" class="row">
  <div class="card-deck">
  <% @hugs.where(category: 0).each do |hug| %>
    <div class="wrapper mx-4">
      <div class="card"><%= cl_image_tag hug.photo, class: "card-img" %>
        <div class="info">
          <h1><%= hug.title %></h1>
          <p><%= hug.description.first(70) %>...</p>
          <button><%= link_to "Details", hug_path(hug) %></button>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
