<div id="heroHeaderHome" class="jumbotron jumbotron-fluid h-100 vh-70 d-flex img-wrapper">
  <div  class="container flex-column text-center my-auto">
    <h1 class="display-4 ">Welcome to Hug'N'More</h1>
    <p class="lead">Take your time... make a hug ‚ô•Ô∏è</p>
  </div>
</div>
<div id="searchBar">
  <div class="container-fluid align-items-center">
    <div id="searchBarContent" class="col-12 col-md-10 offset-md-1 text-center">
      <%= form_tag hugs_path, method: :get do %>
        <%= text_field_tag :s,
              params[:s],
              class: "form-control, align-self-center",
              placeholder: "Hug ? Where ?",
              type: "search"
            %>
        <%# submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<section id="friendly" class="container-fluid">
  <div  class="row text-center">
    <div class="col-12 mb-4">
      <h2 class="text-primary display-2 text-uppercase"><strong>Friendly</strong></h2>
    </div>
    <% @hugs.select(&:friendly?).each do |hug| %>
      <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-4 mb-sm-4">
        <div class="wrapper">
          <div class="card"><%= cl_image_tag hug.photo, class: "card-img" %>
            <div class="info">
              <h3><%= hug.title %></h3>
              <p><%= hug.description.first(70) %>...</p>
              <button><%= link_to "Details", hug_path(hug) %></button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
