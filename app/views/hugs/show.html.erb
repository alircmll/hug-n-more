    <div class="row">
      <div class="img_show" style="background-image: url(<%= cl_image_path(@hug.photo) %>);">
      </div>
    </div>
    <div class="row">
      <div class="col-8 p-5 ">
        <h1><%= @hug.title %></h1>
        <h2><%= @hug.category.to_s %></h2>
        <br>
        <p><%= @hug.description %></p>
        <hr>
        <p class="text-right">Price <%= @hug.price %> â‚¬ </p>
      </div>
      <div class="d-flex col-4 p-5  align-items-end">
