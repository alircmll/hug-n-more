<section id="" class="hero-header jumbotron jumbotron-fluid vh-45 d-flex">
  <div  class="container flex-column text-center my-auto">
    <section id="" class=" flex-column vertical-center px-4">
      <div class="">
        <%= cl_image_tag @hugger.photo, class: "avatar-sidebar mb-3"%>
        <h4><%= @hugger.username %></h4>
        <div id="hugger-infos">
          <div class="text-center">
            <p> <%= @hugger.address %></p>
          </div>
        </div>
      </div>
    </section>
  </section>
  <div id="hugger" class="d-flex">
    <section id="huggerContent" class="item flex-grow-1">
      <div class="row">
        <div class="card-deck">
          <% @hugs.each do |thing| %>
          <%= link_to hug_path(thing.id) do %>
            <div class="card">
              <%= cl_image_tag thing.photo, class: "card-img" %>
              <div class="card-img-overlay text-white d-flex flex-column justify-content-center">
                <h4 class="card-title"><%= thing.title %></h4>
                <p class="card-text"><%= thing.description %></p>
                <p class="card-text"><%= thing.price %></p>
              </div>
            </div>
            
            <% end %>
          <% end %>
        </div>
      </div>
    </section>
  </div>
