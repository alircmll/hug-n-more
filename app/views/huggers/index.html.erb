<section id="huggersIndex" class="container-fluid ">
  <div class="row">
    <div class="col-12 text-center">
      <p class="lead">Some hugs</p>
      <p class="text-bold h1 text-uppercase text-primary display-3">Friendly</p>
    </div>
  </div>
  <div id="" class="row">
    <% @huggers.each do |hugger| %>
      <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-4 mb-sm-4">
        <div class="wrapper">
          <div class="card"><%= cl_image_tag hugger.photo, class: "card-img" %>
            <div class="info">
              <h3><%= hugger.username %></h3>
              <button><%= link_to "Details", hugger_path(hugger) %></button>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>


