<section class="container min-height-container mb-4">
  <div class="row">
    <div class="col-12 mb-4">
      <h1>Huggers</h1>
    </div>
  </div>
  <div id="friendly" class="row">
    <div class="card-deck">
    <% @huggers.each do |hugger| %>
      <div class="wrapper mx-4">
        <div class="card"><%= cl_image_tag hugger.photo, class: "card-img" %>
          <div class="info">
            <h3><%= hugger.username %></h3>
            <button><%= link_to "Details", hugger_path(hugger) %></button>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</section>
