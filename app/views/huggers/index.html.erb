<div class="under-banner d-flex justify-content-start ml-5">
  <h1>Categories</h1>
</div>
  <div class="container">
    <div class="row">
      <% @huggers.each do |hugger| %>
        <div class="col-4">
          <div class="card-category m-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
            <div class="card-body">
              <%= link_to hugger.username, hugger_path(hugger), :style=>'color: white;' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
</div>
