<div id="deviceForm" class="container min-height-container">
  <div class="row h-100 justify-content-center align-items-center pt-4">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2>Log in</h2>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: 'john.wick@babayaga.bullet' %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                placeholder: 'azerty7' %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-block btn-primary" %>
          <%= render "devise/shared/links" %>
        </div>
        
      <% end %>
    </div>
  </div>
</div>
